<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_splash_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#550000ff"
    android:gravity="center"
    tools:context=".activities.SplashActivity">
    <TextView
        android:id="@+id/tv_splash_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage your phone"
        android:textStyle="bold"
        android:textSize="35sp"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:id="@+id/iv_splash_icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/splashicon"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_splash_title"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/tv_splash_version_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第一版"
        android:textSize="28sp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/iv_splash_icon"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_splash_version_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>
